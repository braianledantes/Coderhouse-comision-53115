<h2 class="section-title">Productos en tiempo real</h2>
<section class="realtimeproducts">
    <form id="form" class="form-create-product">
        <h3>Crear producto nuevo</h3>
        <label for="code">C√≥digo: </label>
        <input type="text" name="code" id="code">
        <label for="title">T√≠tulo: </label>
        <input type="text" name="title" id="title">
        <label for="description">Descripci√≥n: </label>
        <input type="text" name="description" id="description">
        <label for="thumbnail">Miniatura: </label>
        <input type="url" name="thumbnail" id="thumbnail">
        <label for="price">Precio: </label>
        <input type="number" name="price" id="price">
        <label for="status">Estado: </label>
        <input type="checkbox" name="status" id="status">
        <label for="stock">Stock: </label>
        <input type="number" name="stock" id="stock">
        <label for="category">Categor√≠a: </label>
        <input type="text" name="category" id="category">
        <button type="submit" id="btnCreateProduct">Crear</button>
    </form>

    <div>
        <section id="products-list" class="products-list">
            {{#if isEmpty}}
            <p>No hay productos para mostrar üò¢</p>
            {{else}}
            {{#each products}}
            <article class="product" id="{{this.id}}">
                <img class="img" src="{{this.thumbnail}}">
                <h3 class="title">{{this.title}}</h3>
                <p class="code">C√≥digo: {{this.code}}</p>
                <p class="stock">Stock: {{this.stock}}</p>
                <p class="price">Precio: ${{this.price}}</p>
                <p class="category">Categor√≠a: {{this.category}}</p>
                <div class="product-item-buttons">
                    <button onclick="deleteProduct('{{this.id}}')">Eliminar</button>
                </div>
            </article>
            {{/each}}
            {{/if}}
        </section>
    </div>
</section>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/realtimeproducts.js"></script>