<h2 class="section-title">Paginación de productos</h2>
<section class="products">
    <div class="products-list">
        {{#each payload}}
        <article class="product" id="{{this.id}}">
            <img class="img" src="{{this.thumbnail}}">
            <h3 class="title">{{this.title}}</h3>
            <p class="code">Código: {{this.code}}</p>
            <p class="price">Precio: ${{this.price}}</p>
            <div class="product-item-buttons">
                <a href="/products/{{this.id}}"><button>Ver</button></a>
                <button onclick="addProductToCart('{{this.id}}')">Agregar al carrito</button>
            </div>
        </article>
        {{/each}}
    </div>
    <div class="page-nav">
        {{#if hasPrevPage}}
        <a href="{{prevLink}}" class="btn-prev">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="{{nextLink}}" class="btn-prev">Siguiente</a>
        {{/if}}
    </div>
</section>

<script src="/scripts/products.js"></script>